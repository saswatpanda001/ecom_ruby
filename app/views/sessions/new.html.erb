<nav class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white shadow-md py-4">
  <div class="container mx-auto flex justify-between items-center px-4">
    
    <!-- Logo / Site name -->
    <div class="text-2xl font-extrabold tracking-wide">
      <%= link_to "Ecommerce", root_path, class: "hover:text-yellow-300 transition-colors duration-200" %>
    </div>

    <!-- Navigation Links -->
    <div class="flex items-center space-x-6 text-sm md:text-base">
      <% if user_signed_in? %>
        <span class="font-medium">Hello, <%= current_user.username %></span>
        <%= link_to "Products", products_path, class: "hover:underline hover:text-yellow-300" %>
        <%= link_to "Cart", cart_path, class: "hover:underline hover:text-yellow-300" %>
        <%= link_to "Logout", logout_path, method: :delete, data: { turbo_method: :delete }, class: "hover:underline hover:text-red-300" %>
      <% else %>
      <%= link_to "Login", login_path, class: "hover:underline hover:text-green-300" %>
      <%= link_to "Signup", signup_path, class: "hover:underline hover:text-green-300" %>
      <%= link_to "About", about_path, class: "hover:underline hover:text-green-300" %>
      <%= link_to "Home", root_path, class: "hover:underline hover:text-green-300" %>
      <% end %>
    </div>
  </div>
</nav>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-3xl font-semibold text-center text-blue-600 mb-6">Login</h1>

    <%= form_with url: login_path, method: :post, class: "space-y-4" do %>
      <div>
        <%= label_tag :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= text_field_tag :email, nil, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= label_tag :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= password_field_tag :password, nil, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= submit_tag "Login", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm text-gray-600">
      Don't have an account?
      <%= link_to "Signup", signup_path, class: "text-blue-600 hover:underline" %>
    </p>
  </div>
</div>
