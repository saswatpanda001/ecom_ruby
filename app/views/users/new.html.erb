<nav class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white shadow-md py-4">
  <div class="container mx-auto flex justify-between items-center px-4">
    
    <!-- Logo / Site name -->
    <div class="text-2xl font-extrabold tracking-wide">
      <%= link_to "Ecommerce", root_path, class: "hover:text-yellow-300 transition-colors duration-200" %>
    </div>

    <!-- Navigation Links -->
    <div class="flex items-center space-x-6 text-sm md:text-base">
      <% if user_signed_in? %>
        <span class="font-medium">Hello, <%= current_user.username %></span>
        <%= link_to "Products", products_path, class: "hover:underline hover:text-yellow-300" %>
        <%= link_to "Cart", cart_path, class: "hover:underline hover:text-yellow-300" %>
        <%= link_to "Logout", logout_path, method: :delete, data: { turbo_method: :delete }, class: "hover:underline hover:text-red-300" %>
      <% else %>
      <%= link_to "Login", login_path, class: "hover:underline hover:text-green-300" %>
      <%= link_to "Signup", signup_path, class: "hover:underline hover:text-green-300" %>
      <%= link_to "About", about_path, class: "hover:underline hover:text-green-300" %>
      <%= link_to "Home", root_path, class: "hover:underline hover:text-green-300" %>
      <% end %>
    </div>
  </div>
</nav>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-3xl font-semibold text-center text-blue-600 mb-6">Signup</h1>

    <%= form_with model: @user, url: signup_path, data: { turbo: false }, class: "space-y-4" do |f| %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :username, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :province_id, "Province", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :province_id, 
                      @provinces.collect { |p| [p.name, p.id] },
                      { include_blank: "Select a province..." },
                      class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Create Account", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Login", login_path, class: "text-blue-600 hover:underline" %>
    </p>
  </div>
</div>

