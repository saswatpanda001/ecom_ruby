
<div class="bg-gray-50 text-gray-900 font-sans">

  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white py-20 text-center">
    <div class="container mx-auto px-6">
      <h1 class="text-5xl font-bold tracking-tight">About Us</h1>
      <p class="mt-4 text-lg"><%= page.about_us %></p>
    </div>
  </section>

  <!-- Our Story -->
  <section class="py-16">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold mb-6 text-indigo-700">Our Story</h2>
      <p class="text-gray-700 max-w-3xl mx-auto leading-relaxed">
        <%= page.our_story %>
      </p>
    </div>
  </section>

  <!-- Mission & Values -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold mb-6 text-indigo-700">Our Mission & Values</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="p-6 bg-white rounded-lg shadow-md">
          <h3 class="text-lg font-semibold mt-3">Mission</h3>
          <p class="text-gray-600"><%= page.mission %></p>
        </div>
        <div class="p-6 bg-white rounded-lg shadow-md">
          <h3 class="text-lg font-semibold mt-3">Values</h3>
          <p class="text-gray-600"><%= page.values %></p>
        </div>
      </div>
    </div>
  </section>

</div>
