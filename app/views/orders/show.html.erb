<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Order Details</h1>

  <div class="bg-white p-6 rounded-lg shadow space-y-4">
    <p><strong>Address:</strong> <%= @order.address %></p>
    <p><strong>City:</strong> <%= @order.city %></p>
    <p><strong>Postal Code:</strong> <%= @order.postal_code %></p>
    <p><strong>Payment Method:</strong> <%= @order.payment_method %></p>
    <p><strong>Status:</strong> <%= @order.status %></p>
    <p><strong>Total Price:</strong> <%= number_to_currency(@order.total_price) %></p>
  </div>

  <h2 class="text-2xl font-semibold mt-8 mb-4">Items Purchased</h2>

  <div class="bg-white p-6 rounded-lg shadow">
    <% @order_items.each do |item| %>
      <div class="flex justify-between py-2 border-b">
        <div>
          <p><strong><%= item.product.title %></strong></p>
          <p class="text-gray-600">Quantity: <%= item.quantity %></p>
        </div>
        <div>
          <p><%= number_to_currency(item.product_price) %> each</p>
          <p>Subtotal: <%= number_to_currency(item.product_price * item.quantity) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
